.forget-password {
  height: 100vh;
  background-image: url('/src/assets/images/login-bg.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-color: #242424;
  backdrop-filter: blur(3px);
  box-sizing: border-box;
}
.forget-password .container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background: rgba(36, 36, 36, 0.3);
}
.forget-password .container .content {
  height: 100%;
  padding: 40px 24px;
  box-sizing: border-box;
  backdrop-filter: blur(9px);
}
.forget-password .container .content .register-title {
  font-family: PingFangSC, PingFang SC;
  font-weight: 600;
  font-size: 24px;
  color: #FFFFFF;
  line-height: 33px;
  font-style: normal;
  margin-bottom: 10px;
}
.forget-password .container .content .sub-title {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 12px;
  color: #FFFFFF;
  line-height: 17px;
  text-align: left;
  font-style: normal;
  margin-bottom: 40px;
}
.forget-password .container .content .register-form {
  width: 100%;
  margin-bottom: 40px;
}
.forget-password .container .content .register-form .input-box {
  display: flex;
  align-items: center;
  height: 50px;
  background: rgba(27, 27, 27, 0.4);
  border-radius: 25px;
  border: 1px solid #636363;
  padding: 0 22px;
  margin-bottom: 24px;
}
.forget-password .container .content .register-form .input-box .icon {
  width: 17px;
  height: 19px;
  margin-right: 9px;
}
.forget-password .container .content .register-form .input-box .input {
  height: 100%;
  flex: 1;
  outline: none;
  border: none;
  background: transparent;
  color: #AFAFAF;
  font-size: 14px;
}
.forget-password .container .content .register-form .input-box:last-of-type {
  margin-bottom: 16px;
}
.forget-password .container .content .register-form .input-box .send-btn {
  font-size: 16px;
  color: #3fc186;
  line-height: 22px;
}
.forget-password .container .content .register-form .pwd-error-tip {
  min-height: 17px;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 12px;
  color: #3FC186;
  line-height: 17px;
  text-align: left;
  font-style: normal;
  word-break: break-all;
}
.forget-password .container .content .confirm-btn {
  height: 50px;
  line-height: 50px;
  background: #3FC186;
  border-radius: 29px;
  font-size: 16px;
  color: #FFFFFF;
  text-align: center;
  margin-bottom: 24px;
}
.forget-password .container .content .return-btn {
  height: 50px;
  line-height: 50px;
  border-radius: 29px;
  border: 1px solid #3FC186;
  text-align: center;
  color: #3FC186;
}
.forget-password .container .content .sign-tip-box {
  text-align: center;
  color: #AFAFAF;
}
.forget-password .container .content .sign-tip-box .link {
  color: #3FC186;
}
